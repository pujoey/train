 <p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Account Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.account_name %></td>
        <td><%= user.email %></td>
        <% if current_user && current_user.account_name == user.account_name  %>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
