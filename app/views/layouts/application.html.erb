<!DOCTYPE html>
<html>
<head>
  <title>Train</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Adding favicon -->
  <link rel="shortcut icon" href="favicon.ico" >
  <link rel="icon" type="image/gif" href="animated_favicon1.gif" >

</head>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("logo1.png", size: "64x37", border: 0), root_path, class: "navbar-brand" %>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-left">

          <!-- navbar menus -->
          <!-- testing if current_user is from User class -->
          <% if current_user.class == User.last.class %>
            <li><%= link_to "Progress", user_path(current_user) %></li>
            <li><%= link_to "Schedule & Calendar", schedules_path %></li>
            <li><%= link_to "Messages", messages_path %></li>
            <li><%= link_to "Profile", edit_user_path(current_user) %></li>
          <% end %>

          <!-- testing if current_user is from Trainer class -->
          <% if current_user.class == Trainer.last.class %>
            <li><%= link_to "Progress", trainer_path(current_user) %></li>
            <li><%= link_to "Schedule & Calendar", schedules_path %></li>
            <li><%= link_to "Messages", messages_path %></li>
            <li><%= link_to "Profile", edit_trainer_path(current_user) %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= image_tag(current_user.image_uri, size: "40x50") %></li>
            <li><a>Welcome, <%= current_user.first_name %></a></li>
            <li><%= link_to 'Logout', session_path('dummy'), method: :delete %></li>
          <% else %>
            <li><%= link_to 'Login', login_path %></li>
            <li><%= link_to 'Sign Up', new_user_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

<%= yield %>

</body>
</html>

