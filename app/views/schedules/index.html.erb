<div class="container panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Workout Sessions History <%= link_to 'New Schedule', new_schedule_path, class: 'right'%></div>


  <!-- Table -->
  <table class="table">
  <!-- Messages in descending order most recent ones first -->
  <% @schedules.order(id: :desc).each do |schedule| %>
        <tr>
          <!-- format message time to Hour:Min if its today or date if it's not today -->
          <% if Time.now.strftime('%v') == schedule.updated_at.strftime("%v") %>
            <td class="col-md-1"><%= schedule.updated_at.strftime("%I:%M %P") %></td>
          <% else %>
            <td class="col-md-1"><%= schedule.updated_at.strftime("%h %g %a") %></td>
          <% end %>
          <td class="col-md-2"><%= schedule.title %></td>
          <td class="col-md-2"><%= schedule.area_focus %></td>
          <td class="col-md-5"><%= schedule.description %></td>
          <td class="col-md-5"><%= link_to "Edit", edit_schedule_path(schedule) %></td>
        </tr>
  <% end %>
  </table>
</div>
<%# binding.pry %>
<!-- calendar table in html -->
<section id="calendar">
  <h2 id="month">
    <%= link_to "<", month: last_month %>
    <%= this_month %>
    <%= link_to ">", month: next_month %>
  </h2>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>Sun</th>
        <th>Mon</th>
        <th>Tues</th>
        <th>Wed</th>
        <th>Thurs</th>
        <th>Fri</th>
        <th>Sat</th>
      </tr>
    </thead>
    <% number_of_weeks.times do |i| %>
      <tr>
        <% 7.times do |j| %>
          <td>
            <%= day_number(i, j) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</section>

