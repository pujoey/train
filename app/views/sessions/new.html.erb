<div class="container form-signin">
    <!-- Alert for authorization fails -->
    <div id="alert" class="alert alert-success"><%= alert %></div>

    <!-- Sign in fields and submit button -->
    <%= form_tag sessions_path do %>

      <h2 class="form-signin-heading">Please sign in</h2>

      <div class="field">
        <%= text_field_tag :account_name, params[:account_name], class: 'form-control', placeholder: 'Account Name'%>
      </div>

      <div class="field">
        <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password' %>
      </div>

      <br>
      <div class="actions"><%= submit_tag "Log in", class: 'actions btn btn-lg btn-primary btn-block' %></div>
    <% end %>
</div>

