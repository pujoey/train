

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan='6'></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.content %></td>
        <% if current_user && current_user[:id] == message.user_id  %>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
