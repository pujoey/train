<p id="notice"><%= notice %></p>

<div class='text-center'>
  <h1>Listing Trainers</h1>
  <table class='table'>
    <thead>
      <tr>
        <th>Account Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trainers.each do |trainer| %>
        <tr>
          <td><%= trainer.account_name %></td>
          <td><%= trainer.email %></td>
          <% if current_user && current_user.account_name == trainer.account_name  %>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
